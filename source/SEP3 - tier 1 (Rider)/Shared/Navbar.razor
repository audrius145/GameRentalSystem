@using WebApplication7.Authentication
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
<nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-menu">
        <div class="navbar-start">
          <NavLink class="navbar-item" href="/Home">
            Home
          </NavLink>
          <div class="navbar-item has-dropdown is-hoverable">
            <NavLink class="navbar-link">
              Games
            </NavLink>
            <div class="navbar-dropdown">
              <NavLink class="navbar-item" href="/view">
                View Games
              </NavLink>
              <NavLink class="navbar-item" href="/MyGames">
                My Games
              </NavLink>
              <NavLink class="navbar-item" href="/MyRents">
                My Rents
                </NavLink>
              <hr class="navbar-divider">
            </div>
          </div>
        </div>

        <div class="navbar-end">
          <NavLink class="navbar-item" href="/MyProfile">My Profile</NavLink>
          <div class="navbar-item">
            <div class="buttons">
              <a class="button is-danger" @onclick="PerformLogoutAsync">
                Log out
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  @code {
  
  public async Task PerformLogoutAsync()
  {
    try
    {
      await ((CustomAuthenticationStateProvider) AuthenticationStateProvider).Logout();
      NavigationManager.NavigateTo("/");
    }
    catch (Exception)
    {
      //ignored
    }
  }
}